<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Dance Pose Analyzer"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#6200EE"
            android:layout_gravity="center_horizontal"/>

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI-powered Dance Scoring App"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="24dp"
            android:background="#DDDDDD"/>

        <!-- About App -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About the App"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PoseBeat is an AI-based dance scoring application that analyzes your dance moves using pose detection and compares them with reference choreography to generate an accuracy score."
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="8dp"/>

        <!-- Features -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Features"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Real-time pose detection using AI\n• Dance accuracy scoring\n• Visual feedback and ratings\n• Score history tracking\n• Simple and user-friendly UI"
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="8dp"/>

        <!-- Developer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by Kartikeya Gupta as an Android + AI/ML learning project."
            android:textSize="15sp"
            android:textColor="#444444"
            android:layout_marginTop="8dp"/>

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:textSize="13sp"
            android:textColor="#888888"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</ScrollView>
