<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_home">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AIDancePoseAnalyzer"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#1E1E1E"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dance_ai_score"
        android:textSize="14sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTagline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Song Dropdown -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/songDropdownLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/select_dance_song"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteSong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Start Dance -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartDance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_dance"
                android:icon="@drawable/ic_play"
                app:iconPadding="8dp"
                android:layout_marginTop="24dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#6200EE"
                app:elevation="6dp"/>

            <!-- History -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/score_history"
                android:icon="@drawable/ic_history"
                app:iconPadding="12dp"
                android:layout_marginTop="16dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#03DAC5"
                app:elevation="4dp"/>

            <!-- About -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_app"
                android:icon="@drawable/ic_info"
                app:iconPadding="12dp"
                android:layout_marginTop="16dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#EEEEEE"
                android:textColor="#333333"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
