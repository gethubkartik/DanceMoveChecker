<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:implementationMode="performance"
        app:scaleType="fillCenter"/>

    <!-- Dark Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"/>

    <!-- Center Guide Frame -->
    <FrameLayout
        android:id="@+id/centerFrame"
        android:layout_width="230dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@drawable/frame_border_glow"/>

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/tvGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fit_your_full_body_inside_the_frame"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"/>

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#55000000">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PoseBeat"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Start Dance Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartDance"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Start Dance"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        app:cornerRadius="50dp"
        app:backgroundTint="#7C4DFF"
        app:elevation="8dp"/>
</FrameLayout>
